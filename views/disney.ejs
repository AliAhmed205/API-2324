<!DOCTYPE html>
<html lang="en">
<%- include('head.ejs') %>

  <body id="unique">
    <header>
      <img src="images/rose-n-flowers.webp" alt="Roses-and-flowers">
      <img src="images/rose-n-flowers.webp" alt="Roses-and-flowers">
      <nav>
        <h1>Disney</h1>
      </nav>
    </header>
    <main id="disney">
      <img src="images/bird.gif" alt="birds">
      <% if (filmlijst && filmlijst.length> 0) { %>
        <h2>Discover</h2>
        <ul>
          <% for (let i=filmlijst.length - 1; i>= 0; i--) { %>
            <li>
              <% const film=filmlijst[i]; %>
                <% if (film.backdrop_path) { %>
                  <h3>
                    <%= film.title %>
                  </h3>
                  <a href="/detail/<%= film.id %>">
                    <div id="disneyGardient"></div>
                    <img src="https://image.tmdb.org/t/p/w500<%= film.backdrop_path %>" alt="<%= film.title %>">
                    <p>
                      <%= film.overview.split(/[.;]/)[0] %>
                    </p>
                  </a>
                  <% } else { %>
                    <p>No poster available</p>
                    <% } %>
            </li>
            <% } %>
        </ul>
        <% } else { %>
          <p>Er zijn geen films beschikbaar op dit moment.</p>
        <% } %>

        <% if (filmlijst && filmlijst.length> 0) { %>
          <h2>Disney Classics</h2>
          <ul>
            <% filmlijst.forEach(film=> { %>
              <li>
                <% if (film.poster_path) { %>
                  <a href="/detail/<%= film.id %>"><img src="https://image.tmdb.org/t/p/w500<%= film.poster_path %>"
                      alt="<%= film.title %>"></a>
                <% } else { %>
                  <p>No poster available</p>
                <% } %>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p>Er zijn geen films beschikbaar op dit moment.</p>
        <% } %>

        <!-- Films vanaf 2005 -->
        <% if (filmsFrom2005 && filmsFrom2005.length> 0) { %>
          <h2>Comedy</h2>
          <ul>
            <% filmsFrom2005.forEach(film=> { %>
              <li>
                <% if (film.poster_path) { %>
                  <a href="/detail/<%= film.id %>"><img
                    src="https://image.tmdb.org/t/p/w500<%= film.poster_path %>"
                    alt="<%= film.title %>"></a>
                <% } else { %>
                  <p>No poster available</p>
                <% } %>
              </li>
            <% }); %>
          </ul>
          <% } else { %>
            <p>No films available from 2005 onwards.</p>
          <% } %>
    </main>
    <footer>
      <nav>
        <ul>
          <li>
            <a href="/">üè†</a>
          </li>
          <li>
            <button type="button">üîç</button>
          </li>
          <li>
            <button type="button" id="magicBtn">ü™Ñ</button>
          </li>
        </ul>
      </nav>
    </footer>
    <div id="glitterBackground"></div>
    <script src="js/disney.js"></script>
  </body>

</html>